{% import "widgets/base_widgets.html.twig" as base_widgets %}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    {% set title = block('title')|raw %}
    {% set description = block('description')|raw %}

    <title>{{ title }}</title>
    {% block stylesheets %}
    {% endblock %}
    <link rel="stylesheet" type="text/css" href="{{ asset('dist/css/styles.min.css') }}"/>
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
    <meta name="description" content="{{ description }}">
    <base href="/" target="_self">
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i" rel="stylesheet">

    <script type="text/javascript">
        window._mfq = window._mfq || [];
        (function() {
            var mf = document.createElement("script");
            mf.type = "text/javascript"; mf.async = true;
            mf.src = "//cdn.mouseflow.com/projects/dcec0431-ad6f-4fe8-9b8c-cb5096602c65.js";
            document.getElementsByTagName("head")[0].appendChild(mf);
        })();
    </script>
</head>
<body>
<!--[if lte IE 9]>
<p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="http://browsehappy.com/">upgrade
    your browser</a> to improve your experience and security.</p>
<![endif]-->

<header class="header">
    <div class="container header-container">
        <div class="logo-wrapper">
            <img src="{{ asset("dist/logo/nodika.svg") }}" class="logo-img">
        </div>

        <div class="header-content">
            <h1>{{ title }}</h1>
            <p class="h1-description">{{ description }}</p>
            {% block header %}
            {% endblock %}
        </div>
        <div class="go-buttons">
            {% if back_url is defined %}
                <a href="{{ back_url }}"
                   class="{{ color_class }} go-button">{{ "navigation.go_back"|trans({}, "content_base") }}</a>
            {% endif %}
            {% if not ("setup" in app.request.attributes.get('_route')) and organisation is defined %}
                <a href="{{ path("administration_organisation_setup", {"organisation" : organisation.id}) }}"
                   class="{{ color_class }} go-button">{{ "navigation.go_to_setup"|trans({}, "content_base") }}</a>
            {% endif %}
        </div>
    </div>
</header>
{% block content %}

{% endblock %}
<footer class="footer">
    <div class="container footer-container">
        <div class="row">
            <div class="col-md-2">
                made with <3 by <a href="http://famoser.ch">famoser</a>
            </div>
            <div class="col-md-offset-7 col-md-3 align-right">
                version 2017.3
            </div>
        </div>
    </div>
</footer>

<script type="text/javascript" src="{{ asset('dist/js/scripts.min.js') }}"></script>
<script type="text/javascript">
    $(document).ready(function () {
        boot();
    });
</script>

<!-- Global site tag (gtag.js) - Google Analytics -->
<script async src="https://www.googletagmanager.com/gtag/js?id=UA-108619658-1"></script>
<script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());

    gtag('config', 'UA-108619658-1');
</script>

{% block javascript %}
{% endblock %}
</body>
</html>
